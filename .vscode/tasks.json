{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CRM: Start All",
      "dependsOn": ["CRM: Start Backend", "CRM: Start Frontend"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "CRM: Start Backend",
      "type": "shell",
      "command": "cd fastapi_backend; copy ..\\.env .env 2>$null; python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Uvicorn running.*",
          "endsPattern": ".*Application startup complete.*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "CRM"
      }
    },
    {
      "label": "CRM: Start Frontend",
      "type": "shell",
      "command": "cd crm-frontend; copy ..\\.env .env 2>$null; npm start",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Starting.*",
          "endsPattern": ".*Compiled.*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "CRM"
      }
    },
    {
      "label": "CRM: Install Dependencies",
      "type": "shell",
      "command": "cd fastapi_backend; pip install -r requirements.txt; cd ../crm-frontend; npm install",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "CRM: Docker Start",
      "type": "shell",
      "command": "docker-compose up --build -d",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "CRM: Docker Stop",
      "type": "shell",
      "command": "docker-compose down",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
